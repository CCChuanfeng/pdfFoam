FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

nFVSubCycles 1;
nPDFSubCycles 1;

cloudProperties
{
    averageTimeScale      2;
    particlesPerCell      50;
    particleNumberControl on;
    cloneAt               0.9;
    OmegaModel RAS;
    mixingModel IEM;
    reactionModel naiveFlamelet;
    scalarFields
    (
        z
    );
    mixedScalars
    (
        z
    );
    IEMCoeffs
    {
        Cmix 2.0;
    }
    naiveFlameletCoeffs
    {
        zName z;
    }
    boundaryHandlers
    {
            lowerInlet
            {
                    type ghostInlet;
            }
            upperInlet
            {
                    type ghostInlet;
            }
            outlet
            {
                    type ghostOutlet;
            }
            walls
            {
                type            slip;
            }
    }
}

