FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

cloudProperties
{
    // No dissipation
    C1                    0;
    averageTimeScale      6;
    particlesPerCell      100;
    particleNumberControl off;
    cloneAt               0.9;
    kRelaxTime            1e10;
    URelaxTime            1e10;
    OmegaModel RAS;
    mixingModel IEM;
    reactionModel cold;
    scalarFields
    (
    );
    mixedScalars
    (
    );
    IEMCoeffs
    {
        Cmix 2.0;
    }
    coldCoeffs
    {
    }
    boundaryHandlers
    {
            inlet
            {
                    type inletOutlet;
                    randomGenerator
                    {
                        type inversion;
                    }
                    oldInflowMethod true;
            }
            outlet
            {
                    type inletOutlet;
                    randomGenerator
                    {
                        type inversion;
                    }
            }
            walls
            {
                    type slip;
            }
    }
}

